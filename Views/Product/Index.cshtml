<script>
   $(document).on("click", ".wish-icon i", function () {
        $(this).toggleClass("fa-heart fa-heart-o");
    });

    $(document).ready(function () {
    var cartData = localStorage.getItem("lstCartProduct");
    if (cartData) {
        try {
            lstCartProduct = JSON.parse(cartData); // ✅ assign to global
            $('#lblCartCount').html(lstCartProduct.length);
            ProductController.ArrangeProductForCart();
        } catch (e) {
            $('#lblCartCount').html("0");
            lstCartProduct = [];
        }
    } else {
        $('#lblCartCount').html("0");
        lstCartProduct = [];
    }
});


</script>

