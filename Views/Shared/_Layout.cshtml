<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ost_Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ost_Ecommerce.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/controller/productcontroller.js"></script>
    <script src="~/js/services/productservice.js"></script>



    <script>
        $(document).ready(function () {
          if(localStorage.getItem("userName")!=undefined && localStorage.getItem("userName")!=null) {
            // $("#lblUser").text("User Name: " + localStorage.getItem("userName"));
            var userName = localStorage.getItem("userName");    
            $('#lblUser').html(userName);
          } 
        });
        
            $(document).ready(function(){
            ProductController.LoadCartProductForCheckout();
            ProductController.LoadCategories('/Product/CategoryProduct');
           

        })
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ost_Ecommerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Dashboard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
                <div style="float:right;width:500px">
                    <div style="height:10px;display:inline-flex;padding:0px 7px;position: relative;cursor:pointer" onclick="javascript:ProductController.ViewCart()">
                        <i class="fa fa-cart-shopping"></i>
                        <span id="lblCartCount" style="padding:2px 5px;color:white;background:maroon;font-size: 10px;position: absolute;right: -10px;top: -10px;border-radius: 50%;">0</span>
                    </div>
                    <i class="fa fa-user" style="padding-left: 10px;padding-right:2px;"></i><span id="lblUser"></span>
                </div>
            </div>
        </nav>
    </header>
    @Html.Partial("~/Views/Common/_PartialSidebar.cshtml") ;

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @Html.Partial("~/Views/Common/_PartialViewCart.cshtml");
   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Ost_Ecommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
